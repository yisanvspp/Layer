<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_1_in</item>
        <item name="android:windowExitAnimation">@anim/pop_1_out</item>
    </style>


    <style name="phone_pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_2_in</item>
        <item name="android:windowExitAnimation">@anim/pop_2_out</item>

    </style>

</resources>
